<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image x:Name="imgLogo" />
        <Entry Placeholder="Digite apenas os número do CEP" PlaceholderColor="#FFBF00" BackgroundColor="White" x:Name="txtCEP" />
        <Button Text="Buscar CEP" TextColor="White" BackgroundColor="#00416B" x:Name="btnBuscar" Clicked="btnBuscar_Clicked" />

        <Label Text="" x:Name="RESULTADO"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
